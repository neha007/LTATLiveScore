<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_frm"
    android:orientation="vertical"
    tools:context="tennisonline.ltat.com.ltattennisscore.ActivityContainer.AboutActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="150dp"
        android:id="@+id/image"
        android:src="@drawable/abouts1"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/textabout"
        android:textColor="@color/colorwhite"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/smalltext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/textsmall"
        android:textColor="@color/colorwhite"
        android:textSize="18dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Contact us"
        android:id="@+id/contact_button"
        android:background="@drawable/ripple"
        android:textColor="#555555"
        android:textSize="25dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/image1"
            android:src="@drawable/abouts1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Omega-R inc."
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorwhite"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/smalltextt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="design &amp; dev"
            android:textColor="@color/colorwhite"
            android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
