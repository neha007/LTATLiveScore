<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorgrass"
        >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifs"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/green"
            />

    <LinearLayout
        android:background="#48000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="New Match"
            android:textSize="30sp"
            android:drawableLeft="@drawable/backv"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:background="#004040"
            />



        <Switch
            android:id="@+id/simpleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Notification"
            android:textSize="20sp"
            android:textOff="4.4"
            android:textOn="6.6"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="#fff"
            />

        <CheckBox
            android:id="@+id/first_check"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_gravity="right"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:button="@null"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="Deciding point  'No-AD' " />

        <CheckBox
            android:id="@+id/second_check"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@android:drawable/btn_radio"
            android:layout_gravity="right"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textColor="#fff"
            android:button="@null"
            android:textSize="20sp"
            android:text="Match tiebreak " />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textColorHint="#eeeeee"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tournament_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tournament's name"
                android:textColor="#fff"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#eeeeee"
            android:layout_margin="@dimen/activity_horizontal_margin"
            >
            <EditText
                android:id="@+id/adress"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="  Player"
            android:background="#fff"
            android:textColor="#222"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:foregroundGravity="center"

            android:elegantTextHeight="true"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#eeeeee"
            >

            <EditText
                android:id="@+id/full_name"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:hint="Full name"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#eeeeee"
            >
            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textColor="#fff"
                android:hint="Last Name" />

        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/admister_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="Administrator Password : "
            android:textSize="15sp"
            android:textColor="#fff"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/create_accound"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Create"
            android:background="@drawable/ripple"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textColor="#222"
            android:fontFamily="casual"
            android:layout_gravity="center"
            />

    </LinearLayout>

    </FrameLayout>

</ScrollView>